# Development Environment Configuration
# This file contains development-specific environment variables
# It can be committed to version control as it contains no secrets

# =============================================================================
# DEVELOPMENT ENVIRONMENT
# =============================================================================

NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================

PORT=3000
HOST=0.0.0.0
API_BASE_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

MONGODB_URI=mongodb://mongodb:27017/bb-db
DATABASE_NAME=bb-db
DB_MAX_POOL_SIZE=5
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

FRONTEND_PORT=3001
FRONTEND_HOST=0.0.0.0
VITE_API_URL=http://localhost:3000
CHOKIDAR_USEPOLLING=true

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

AUTO_SEED=true
RESTART_POLICY=unless-stopped

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

HEALTH_CHECK_INTERVAL=15
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

CORS_ORIGINS=http://localhost:3001,http://localhost:3000,http://localhost:5173
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60000

# Development secrets (not real secrets, safe to commit)
SESSION_SECRET=dev-session-secret-not-for-production
JWT_SECRET=dev-jwt-secret-not-for-production