# Staging Environment Configuration
# This file contains staging-specific environment variables
# It can be committed to version control as it contains no secrets
# Real secrets should be provided via environment variables or secret management

# =============================================================================
# STAGING ENVIRONMENT
# =============================================================================

NODE_ENV=staging

# =============================================================================
# API CONFIGURATION
# =============================================================================

PORT=3000
HOST=0.0.0.0
API_BASE_URL=https://staging-api.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Use environment variable override for real staging database
MONGODB_URI=mongodb://staging-mongo:27017/bb-db-staging
DATABASE_NAME=bb-db-staging
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT=10000
DB_SOCKET_TIMEOUT=60000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

FRONTEND_PORT=3001
FRONTEND_HOST=0.0.0.0
VITE_API_URL=https://staging-api.yourdomain.com
CHOKIDAR_USEPOLLING=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

AUTO_SEED=false
RESTART_POLICY=unless-stopped

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
LOG_MAX_SIZE=50m
LOG_MAX_FILES=5

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=15
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

CORS_ORIGINS=https://staging.yourdomain.com,https://staging-admin.yourdomain.com
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_WINDOW=60000

# Staging secrets (should be overridden by environment variables)
SESSION_SECRET=staging-session-secret-override-with-env-var
JWT_SECRET=staging-jwt-secret-override-with-env-var